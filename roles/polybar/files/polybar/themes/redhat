[colors]
black                    = #000000
gray                     = #AAAAAA
gray_dark                = #4D4D4D
gray_light               = #DEDEDE
red                      = #EE0000
red_dark                 = #BE0000
red_darker               = #5F0000
red_light                = #F5606D
red_lighter              = #FAB6B6
white                    = #FFFFFF

[global/wm]
margin-bottom            = 5
margin-top               = 5

[bar/top]
background               = ${colors.black}
border-color             = ${colors.black}
border-size              = 0
cursor-click             = pointer
cursor-scroll            = arrow
enable-ipc               = true
fixed-center             = true
font-0                   = Noto Sans Medium:size=13;3
font-1                   = Red Hat Display Black:size=12;4
font-2                   = Font Awesome 5 Brands Regular:size=20;5
font-3                   = Material Icons:size=16;5
foreground               = ${colors.white}
height                   = 35
modules-center           = spotify
modules-left             = red-hat bspwm
modules-right            = battery date
padding-left             = 5
padding-right            = 5
scroll-down              = bspwm-deskprev
scroll-up                = bspwm-desknext
width                    = 100%
wm-restack               = bspwm

[module/battery]
type                     = internal/battery
adapter                  = ADP1
battery                  = BAT0
format-charging          = <label-charging>
format-discharging       = <label-discharging><ramp-capacity>
full-at                  = 99
label-full               = %percentage%%
poll-interval            = 5
ramp-capacity-0          = %{F#ff0000}%{F-}
ramp-capacity-1          = 
ramp-capacity-2          = 
ramp-capacity-3          = 
ramp-capacity-4          = 
time-format              = %H:%M

[module/bspwm]
type                     = internal/bspwm
enable-scroll            = false
label-empty              = %index%
label-empty-foreground   = ${colors.gray_dark}
label-empty-padding      = 4
label-focused            = %index%
label-focused-background = ${colors.red}
label-focused-foreground = ${colors.white}
label-focused-padding    = 4
label-occupied           = %index%
label-occupied-padding   = 4
label-urgent             = %index%
label-urgent-foreground  = ${colors.red}
label-urgent-padding     = 4

[module/date]
type                     = internal/date
date-alt                 = %A, %B %d, %Y
interval                 = 5
label                    = " %date% %time%"
time                     = %H:%M

[module/red-hat]
type                     = custom/text
content                  = %{T3}  %{T2}%{F#ffffff}Red Hat%{F-}%{O60} %{O-}
content-foreground       = ${colors.red}

[module/spotify]
type                     = custom/script
exec                     = python ~/.config/polybar/plugins/spotify_status.py -f '{song} - {artist}' 2> /dev/null
format                   = <label>
interval                 = 1
