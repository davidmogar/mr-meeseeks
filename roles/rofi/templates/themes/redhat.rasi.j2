* {
  font: "{{ theme.fonts.sans }} 12";
}

element {
  background-color: {{ theme.colors.gray.light }};
  padding: 10px;
  text-color: {{ theme.colors.black }};
}

element normal active {
  background-color: {{ theme.colors.gray.light }};
  text-color: {{ theme.colors.red.normal }};
}

element selected {
  background-color: {{ theme.colors.red.normal }};
  text-color: {{ theme.colors.white }};
}

entry, inputbar, prompt, textbox-prompt-colon {
  background-color: {{ theme.colors.gray.light }};
  font: "{{ theme.fonts.sans }} SemiBold 12";
  text-color: {{ theme.colors.black }};
}

inputbar {
  children: [ prompt, textbox-prompt-colon, entry ];
  padding: 10px;
}

listview {
  background-color: {{ theme.colors.gray.light }};
}

mainbox {
  spacing: 0;
}

textbox-prompt-colon {
  expand: false;
  margin: 0 1ch 0 0;
  str: ":";
}

window {
  location: center;
  width: 30%;
}